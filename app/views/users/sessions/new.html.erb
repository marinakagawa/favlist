<div class="row">
  <div class="form-area col-md-4">
<h2 class="form-title"><%= t('sign_in') %></h2>
    <div class="form-fields">
<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email, for: "exampleInputEmail1", class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"exampleFormControlInput1" %>
  </div>

  <div class="field">
    <%= f.label :password, for: "exampleInputPassword1", class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "exampleInputPassword1" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
      <%= f.label :remember_me, class: "form-check-label", for: "exampleCheck1" %>
    </div>
  <% end %>

  <div class="actions submit-btn">
    <%= f.submit t('sign_in'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
    </div>
  </div>
</div>