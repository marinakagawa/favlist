<div class="row">
  <div class="form-area col-md-4">
    <h2 class="form-title"><%= t('forgot_your_password') %></h2>
    <div class="form-fields">
<%= form_with model: @user, url: user_password_path do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= form.label :email, for: "exampleInputEmail1", class: "form-label" %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"exampleFormControlInput1" %>
  </div>

  <div class="actions submit-btn">
    <%= form.submit t('send_me_reset_password_instructions'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
    </div>
  </div>
</div>
