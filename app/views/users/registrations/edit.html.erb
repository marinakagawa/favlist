<div class="row">
  <div class="form-area col-md-4">
    <h2 class="form-title"><%= t('Account settings', resource: resource.model_name.human) %></h2>
    <div class="form-fields">
<%= form_with model: @user, url: user_registration_path do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= form.label :user_name %><br>
    <%= form.text_field :user_name, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :email, for: "exampleInputEmail1", class: "form-label" %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"exampleFormControlInput1" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= form.label :password, for: "exampleInputPassword1", class: "form-label" %> <i>(<%= t('leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= form.password_field :password, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, for: "exampleInputPassword1", class: "form-label" %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1" %>
  </div>

  <div class="field">
    <%= form.label :current_password, for: "exampleInputPassword1", class: "form-label" %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= form.password_field :current_password, autocomplete: "current-password", class: "form-control", id: "exampleInputPassword1" %>
  </div>

        <div class="actions submit-btn">
          <%= form.submit t('update') %>
        </div>
<% end %>
    </div>
  </div>
</div>

<h3><%= t('cancel_my_account') %></h3>

<p><%= t('unhappy') %> <%= button_to t('cancel_my_account'), user_registration_path, data: { confirm: t('.are_you_sure') }, method: :delete %></p>

<%= link_to t('devise.shared.links.back'), :back %>
